<openerp>
    <data>

        <record id="property_building_view_tree" model="ir.ui.view">
            <field name="name">Form Property Building</field>
            <field name="model">property.building</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="land_id"/>
                </tree>
            </field>
        </record>

        <record id="property_building_view_form" model="ir.ui.view">
            <field name="name">Form Property Building</field>
            <field name="model">property.building</field>
            <field name="arch" type="xml">
                <form string="Building">
                    <sheet>
                        <group colspan="4" col="2">
                            <field name="name"/>
                            <field name="land_id"/>
                            <field name="active"/>
                        </group>
                        <notebook>
                            <page name="page_floor" string="Floor">
                                <field name="floor_ids" nolabel="1" colspan="4">
                                    <tree string='Floors'>
                                        <field name="name" />
                                    </tree>
                                </field>
                            </page>
                            <page name="page_note" string="Note">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="property_building_action" model="ir.actions.act_window">
            <field name="name">Buildings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">property.building</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a Property Building.
              </p>
            </field>
        </record>

        <menuitem
            name="Buildings"
            id="property_building_menu"
            action="property_building_action"
            parent="menu_property_base_config"
            sequence="2"/>

    </data>
</openerp>
