<openerp>
    <data>

        <record id="property_room_view_tree" model="ir.ui.view">
            <field name="name">Form Property Room</field>
            <field name="model">property.room</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="floor_id"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="property_room_view_form" model="ir.ui.view">
            <field name="name">Form Property Room</field>
            <field name="model">property.room</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="2" colspan="2">
                            <field name="name"/>
                            <field name="floor_id"/>
                            <field name="active"/>
                        </group>
                        <notebook>
                            <page name="page_note" sring="Note">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="property_room_action" model="ir.actions.act_window">
            <field name="name">Rooms</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">property.room</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a Property Room.
              </p>
            </field>
        </record>

        <menuitem
            name="Rooms"
            id="property_room_menu"
            action="property_room_action"
            parent="menu_property_base_config"
            sequence="4"/>

    </data>
</openerp>
